<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:id="@+id/cvCliente"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/light_green"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFecha"
            android:layout_width="70dp"
            android:layout_height="110dp"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/tvDiaTransferencia"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    tools:text="Día"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvFechaTransferencia"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    tools:text="mes año"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            app:cardBackgroundColor="@color/light_green"
            android:padding="5dp">

                <TextView
                    android:id="@+id/tvTituloTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    tools:text="Titulo de la transferencia"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvContenidoTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="prueba" />

                <TextView
                    android:id="@+id/tvComentariosTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    tools:text="Descripción" />

        </androidx.cardview.widget.CardView>





</androidx.cardview.widget.CardView>