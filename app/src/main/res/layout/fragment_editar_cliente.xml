<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Reportes.misDatos.clientes.editarCliente.EditarClienteFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:longClickable="true"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:id="@+id/tvCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/textView_nombre_cliente"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNombreCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="90dp"
                    android:gravity="center"
                    android:hint="@string/placeholder_nombre_cliente"
                    android:inputType="text"
                    android:backgroundTint="@color/color_list"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_list"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRutCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/textView_rut_cliente"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRutCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="90dp"
                    android:hint="@string/placeholder_rut_cliente"
                    android:backgroundTint="@color/color_list"
                    android:inputType="text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_list"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCorreoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/textView_correo_cliente"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCorreoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="90dp"
                    android:hint="@string/placeholder_correo_cliente"
                    android:backgroundTint="@color/color_list"
                    android:inputType="textEmailAddress"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_list"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTelefonoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/textView_telefono_cliente"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etTelefonoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="90dp"
                    android:hint="@string/placeholder_telefono_cliente"
                    android:backgroundTint="@color/color_list"
                    android:inputType="phone"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_list"
                    android:textSize="15sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/tvDireccionCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/textView_direccion_cliente"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDireccionCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="90dp"
                    android:hint="@string/placeholder_direccion_cliente"
                    android:backgroundTint="@color/color_list"
                    android:inputType="text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_list"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEstadoClienteEditar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:text="@string/title_cliente_editar"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroupEstadoCliente"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/EstadoClienteRadioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:text="Vigente" />

                        <RadioButton
                            android:id="@+id/EstadoClienteRadioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No vigente" />
                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonCliente"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/light_green"
                    android:layout_marginHorizontal="150dp"
                    android:layout_marginVertical="30dp"
                    android:text="@string/send_cliente" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>