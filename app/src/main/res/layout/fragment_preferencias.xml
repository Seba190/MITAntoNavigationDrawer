<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream"
    tools:context=".ui.preferencias.PreferenciasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Factura-->

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:text="@string/bills"
                android:textColor="@color/orange"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="12sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNameCompany"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="@string/name_company"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="30dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/name_company_message"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="35dp"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDetailCompany1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:id="@+id/tvDetailCompany1"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:text="@string/details_company_1"
                    android:gravity="center"
                    android:textColor="@color/black"

                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDetailCompany2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:id="@+id/tvDetailCompany2"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:text="@string/details_company_2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:text="@string/id_bills"
                android:textColor="@color/orange"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="12sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvIdBills"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="@string/id_bills"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/id_bills_message"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginVertical="35dp"
                    android:textSize="12sp"/>

                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="350dp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvIdAutomaticBills"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="@string/prefix_id_bills"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/prefix"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="35dp"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAutomaticNumeration1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:text="@string/start_automatic_numeration"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/start_bills"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="35dp"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvIdAutomaticNumeration2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:text="@string/start_automatic_numeration"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/start_bills"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="35dp"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:text="@string/choice_money"
                android:textColor="@color/orange"
                android:gravity="bottom"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="12sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvChoiceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:id="@+id/tvChoiceMoney"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:text="@string/select_money"
                    android:layout_marginHorizontal="30dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:text="@string/date_of_expiration"
                android:textColor="@color/orange"
                android:gravity="bottom"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="12sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDateExpiration"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/cream">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="@string/date_of_expirtation_message"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="12sp"/>

                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="350dp" />


            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>