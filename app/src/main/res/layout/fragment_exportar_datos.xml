<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exportarDatos.ExportarDatosFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!--Exportar a PDF -->

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="12dp"
                android:text="@string/Export_to_PDF"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Botones verdes -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWarehouses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/warehouses"
                    android:textColor="@color/white"
                    android:layout_marginStart="150dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTypesOfProductsExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/types_of_products"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <!-- Botones verdes 2 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Products"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSuppliers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Suppliers"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!-- Botones verdes 3 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCustomers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Customers"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTransactionsExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Transactions"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <!-- Botones verdes 4 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTranfersExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Transfers"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Alerts"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/InventoriesExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:text="@string/Inventories"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <!--Exportar a CSV -->

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="12dp"
                android:text="@string/Export_to_CSV"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Botones verdes -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWarehousesExport2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
